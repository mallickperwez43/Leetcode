class Solution {
public:
    long long maximumHappinessSum(vector<int>& happiness, int k) {
        priority_queue<int> maxHeap;

        for(auto it : happiness){
            maxHeap.push(it);
        }

        long long ans = 0, dec = 0;

        for(int i = 0; i < k; i++){
            long long top = maxHeap.top();
            maxHeap.pop();

            ans += max(top - dec, 0LL);

            dec++;
        }

        return ans;
    }
};
