class Solution {
public:
    int canBeTypedWords(string text, string brokenLetters) {
        vector<bool> mp(26, false);

        for(char& ch : brokenLetters) {
            mp[ch - 'a'] = true;
        }

        int result = 0;
        bool canType = true;

        for(char& ch : text) {
            if(ch == ' ') { // completed a word
                if(canType) 
                    result++;
                
                canType = true;
            }
            else if(mp[ch - 'a'] == true) { // broken
                canType = false;
            }
        }
        
        if(canType) // last word
            result++;

        return result;
    }
};
