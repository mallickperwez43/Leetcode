class Solution {
public:
    int maximum69Number (int num) {
        int placeValue = 0;
        int placeValueSix = -1;

        int temp = num;
        while(temp) {
            int remainder = temp % 10;
            if(remainder == 6)
                placeValueSix = placeValue;
            
            temp /= 10;
            placeValue++;
        }

        if(placeValueSix == -1) // we never got 6 in num
            return num;

        return num + 3 * pow(10, placeValueSix); 
    }
};
