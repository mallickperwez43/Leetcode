/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:

    pair<int, TreeNode*> solve(TreeNode* root) {
        if(root == NULL) {
            return {0, NULL};
        }

        auto leftSide = solve(root -> left);
        auto rightSide = solve(root -> right);

        if(leftSide.first == rightSide.first) { // LCA -> same depth
            return {leftSide.first + 1, root};
        }
        else if(leftSide.first > rightSide.first) {
            return {leftSide.first + 1, leftSide.second};
        }
        else {
            return {rightSide.first + 1, rightSide.second};
        }
    }

    TreeNode* subtreeWithAllDeepest(TreeNode* root) {
        return solve(root).second;
    }
};
