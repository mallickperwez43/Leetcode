class Solution {
public:
    int smallestRepunitDivByK(int k) {
        if(k == 1)
            return 1;
        
        int num = 0;

        for(int len = 1; len <= k; len++) {
            
            num = (num * 10 + 1) % k; // remainder will never exceed k - 1, to oavoid integer overflow

            if(num == 0)
                return len;
        }

        return -1;
    }
};

// TC : O(k)
// SC : O(1)
