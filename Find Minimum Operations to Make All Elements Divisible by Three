class Solution {
public:
    int minimumOperations(vector<int>& nums) {
        int ops = 0;

        for(int& num : nums) {
            if(num % 3 != 0)
                ops++;
        }

        return ops;
    }
};


class Solution {
public:
    int minimumOperations(vector<int>& nums) {
        return count_if(nums.begin(), nums.end(), [&](int num) {
            return num % 3 != 0;
        });
    }
};
