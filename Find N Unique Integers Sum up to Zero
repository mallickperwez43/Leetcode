class Solution {
public:
    vector<int> sumZero(int n) {
        if(n == 1) {
            return {0};
        }
        
        vector<int> result;
        if(n & 1) {
            result.push_back(0);
            n--;
        }
        
        int i = 1;
        while(n != 0) {
            result.push_back(i);        
            result.push_back(-i);

            n -= 2;
            i += 1;
        }

        return result;
    }
};
